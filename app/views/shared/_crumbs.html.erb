<% last_crumb = crumbs.to_a.last[0] %>
<ul class="breadcrumb">
  <% crumbs.each do |name, url|  %>
    <li class="<%="active" if name == last_crumb %>">
      <%= url ? link_to(name, url) : name %>
      <% unless name == last_crumb %>
        <span class="divider">/</span>
      <% end %>
    </li>
  <% end %>
</ul>
