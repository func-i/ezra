<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">jStart</a>
      <ul class="nav">
        <li class="<%= 'active' if controller.controller_name == 'home'%>">
          <%= link_to 'Dashboard', '#' %>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'jobs' && controller.action_name == 'new'%>">
          <%= link_to 'Create', new_my_job_path %>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'jobs' && controller.action_name == 'index'%>">
          <%= link_to 'Explore', '#' %>
        </li>
      </ul>

      <ul class="nav pull-right">
        <li class="dropdown">
          <% if signed_in? %>
            <%= link_to '#', :class=>'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
              <b><%= current_user.name %></b>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'View Profile', profile_path(current_user) %>
              </li>
              <li>
                <%= link_to 'Edit Profile', edit_my_profile_path %>
              </li>
              <li>
                <%= link_to 'Logout', [:destroy, :user, :session], :method => :delete, :style=>"color:red;" %>
              </li>
            </ul>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
